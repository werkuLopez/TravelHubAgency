@section Scripts {
    <script>
        $(function () {
            var idcontinente = @(ViewData["idcontinente"] ?? "null"); // Obtener el idcontinente de ViewData

            if (idcontinente != null) {
                $("#contentDestinos").load("/Destinos/_Destinos?idcontinente=" + idcontinente);
            } else {
                $("#contentDestinos").load("/Destinos/_Destinos");
            }

            $(document).on("click", "#prev", function (e) {

                //e.preventDefault();
                var page = $(this).data("page");
                paginarDestinos(page);
            });

            $(document).on("click", "#next", function (e) {
                //e.preventDefault();
                var page = $(this).data("page");
                paginarDestinos(page);
            });

            $(document).on("click", "#see-more", function () {
                var iddestino = $(this).data("id");
                $("#contentDestinos").load("/Destinos/_SingleDestino?iddestino=" + iddestino);
            });
        });

        function paginarDestinos(page) {
            $("#contentDestinos").load("/Destinos/_Destinos?page=" + page);
        }
    </script>
}

