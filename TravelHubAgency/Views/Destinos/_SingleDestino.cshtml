@model Destino

<div class="container-xxl py-5 destination">
    <!-- all destinos -->
    <div class="container">
        <div class="text-center wow fadeIn" data-wow-delay="0.1s">
            <h1 class="mb-5">@Model.Nombre</h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-12 wow fadeIn" data-wow-delay="0.1s">
                <div class="package-item">
                    <div class="d-lg-flex flex-sm-column gap-2">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src="~/img/@Model.Imagen" alt="">
                        </div>
                        <div class="overflow-hidden">
                            <div class="d-flex border-bottom">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-location-crosshairs text-primary me-2"></i>@Model.Nombre</small>
                                <small class="flex-fill text-center border-end py-2" style="visibility:hidden;"><i class="fa fa-calendar-alt text-primary me-2"></i>3 days</small>
                                <small class="flex-fill text-center py-2"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Model.Region</small>
                            </div>
                            <div class="text-center p-4">
                                <h3 class="mb-3">@Model.Precio €</h3>
@*                                 <div class="mb-3">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div> *@
                                <p>@Model.Descripcion</p>
                                <div class="d-flex justify-content-center mb-2">
                                    <a asp-controller="Destinos" asp-action="Index" class="btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">volver</a>
                                    <a href="#" class="btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">reservar </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .package-item {
            display: grid;
            grid-template-columns: 1fr 1fr;
        }

        @@media screen and (max-width:768.98px) {
            .package-item {
                display: flex;
                flex-direction: column;
            }
        }
    </style>
}